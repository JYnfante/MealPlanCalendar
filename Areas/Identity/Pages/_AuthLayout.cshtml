@{ 
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="row"  id="auth-card">

        <div class="card">
            <div class="">
                <ul class="nav nav-tabs justify-content-center">
                    <li class="nav-item">
                        <a class="nav-link" href="/Identity/Account/Login" id="loginTab" onclick="toggleActive('loginTab')">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Identity/Account/Register" id="registerTab" onclick="toggleActive('registerTab')">Register</a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}

